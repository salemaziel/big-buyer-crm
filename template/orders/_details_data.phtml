<h4>Order Details</h4>	

<table class="table">
	<tr>
		<td>Timestamp: </td>
		<td>{{checks.0.timestamp}} ({{formatTimeAgo checks.0.timestamp}})</td>
	</tr>
	<tr>
		<td>Order ID: </td>
		<td>{{checks.0.data.order.userOrderId}}</td>
	</tr>
	
	<tr>
		<td>Total: </td>
		<td>
			<table>
				<tr><td style="padding-right: 5px">Products</td><td>${{formatCurrency checks.0.data.order.price.productTotal}}</td></tr>
				<tr><td style="padding-right: 5px">Shipping</td><td>${{formatCurrency checks.0.data.order.price.shippingTotal}}</td></tr>
				<tr style="border-bottom: 1px solid black"><td style="padding-right: 5px">Tax</td><td>${{formatCurrency checks.0.data.order.price.totalSalesTax}}</td></tr>
				<tr><td style="padding-right: 5px">Total</td><td>${{formatCurrency checks.0.data.order.price.orderTotal}}</td></tr>
			</table>
		</td>		
	</tr>
	
