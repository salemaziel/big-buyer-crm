<h4>Items</h4>	

<table class="table">
	<tr>
		<th></th>
		<th>Shipping Date</th>
		<th>Tracking #</th>
		<th>Price</th>
		<th>Total</th>
	</tr>
	{{#each checks.0.data.order.items}}
	<tr>
		<td>
			{{metadata.catalog.names.display}} 
			<a href="https://www.bestbuy.com/site/searchpage.jsp?st={{sku}}" target="_blank"><i class="fa fa-link"></i></a>
			<br>
			<div class="small text-muted">SKU: {{sku}}</div>
		</td>
		<td>
			{{fulfillment.shippingDate}}		
		</td>
		<td>
			<a href="{{fulfillment.tracking.trackingUrl}}" target="_blank">{{fulfillment.tracking.carrierName}}: {{fulfillment.tracking.trackingNumber}}</a>
		</td>
		<td>
			${{formatCurrency price.unitCurrentPrice}} <span class="small text-danger" style="text-decoration-line: line-through;">${{formatCurrency price.unitRegularPrice}}</span>	
		</td>
		<td>
			${{formatCurrency price.itemTotal}}		
		</td>
	</tr>
	{{/each}}
</table>


